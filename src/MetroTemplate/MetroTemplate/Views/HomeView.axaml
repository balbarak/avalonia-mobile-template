<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="390" d:DesignHeight="844"
			 xmlns:ctl="using:MetroTemplate.Controls"
			 xmlns:views="using:MetroTemplate.Views"
			 Background="{DynamicResource PageBackground}"
			 x:Class="MetroTemplate.Views.HomeView">



	<Grid Classes="page">


		<Grid Classes="page-container">
			<StackPanel Spacing="10">

				<Border Classes="card">
					<Button Command="{Binding GoToSecondViewCommand}">
						Navigate To Second View
					</Button>
				</Border>

				<Border Classes="card">
					<StackPanel>
						<TextBlock Classes="card-title">
							Svg Icons
						</TextBlock>
						<WrapPanel Orientation="Horizontal">
							<Svg Path="/Assets/Icons/ban.svg" Width="50" />
							<Svg Path="/Assets/Icons/bell.svg" Width="50" />
							<Svg Path="/Assets/Icons/building.svg" Width="50" />
							<Svg Path="/Assets/Icons/coins.svg" Width="50" />
							<Svg Path="/Assets/Icons/dotnet.svg" Width="50" />
							<Svg Path="/Assets/Icons/home.svg" Width="50" />
							<Svg Path="/Assets/Icons/list.svg" Width="50" />
						</WrapPanel>
					</StackPanel>

				</Border>

			</StackPanel>
		</Grid>
	</Grid>
</UserControl>
