<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="390" d:DesignHeight="844"
			 xmlns:ctl="using:MetroTemplate.Controls"
			 Background="{DynamicResource PageBackground}"
			 x:Class="MetroTemplate.Views.HomeView">


	<Grid Classes="container">
		<ScrollViewer>
			<RefreshContainer>
				<StackPanel Spacing="10">
					<Border Classes="card">
						<StackPanel>
							<TextBlock Text="Hello"/>
						</StackPanel>
					</Border>

					<Border Classes="card">
						<ctl:MaterialRing IsRunning="true" Color="Red" Width="50" Height="50"/>
					</Border>

					<Border Classes="card">
						<Button Command="{Binding GoToSecondViewCommand}">
							Go To Second View
						</Button>
					</Border>

				</StackPanel>
			</RefreshContainer>
		</ScrollViewer>


	</Grid>
</UserControl>
