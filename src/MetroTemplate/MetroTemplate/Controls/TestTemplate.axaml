<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:MetroTemplate.Controls">
	<Design.PreviewWith>
		<controls:TestTemplate>
				<TextBlock Text="his"/>
		</controls:TestTemplate>
	</Design.PreviewWith>

	<Style Selector="controls|TestTemplate">
		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<Grid Height="200" Width="200" Background="Red">
					<ContentPresenter Content="{TemplateBinding	Content}"/>
				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
