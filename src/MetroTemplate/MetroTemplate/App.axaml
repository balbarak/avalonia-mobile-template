<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MetroTemplate"
			 RequestedThemeVariant="Light"
             x:Class="MetroTemplate.App">


	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source='/Styles/Colors.axaml'/>
				<ResourceInclude Source='/Styles/Resources.axaml'/>
				<ResourceInclude Source='/Styles/Fonts.axaml'/>
				<ResourceInclude Source='/Styles/Svg.axaml'/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>



	</Application.Resources>

	<Application.Styles>
		<FluentTheme />
		<!--<SimpleTheme />-->

		<StyleInclude Source="/Controls/HamburgerMenu.axaml"/>
		<StyleInclude Source="/Controls/ProgressRing.axaml"/>
		<StyleInclude Source="/Controls/RippleEffect.axaml"/>
		<StyleInclude Source="/Controls/LoadingButton.axaml"/>
		<StyleInclude Source="/Controls/MaterialRing.axaml"/>
		<StyleInclude Source="/Styles/Styles.axaml"/>
	</Application.Styles>
</Application>
