<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="390" d:DesignHeight="844"
			 xmlns:ctl="using:MetroTemplate.Controls"
			 xmlns:views="using:MetroTemplate.Views"
			 Background="{DynamicResource PageBackground}"
			 x:Class="MetroTemplate.Views.HomeView">



	<Grid Classes="page">

		
		<Grid Classes="page-container">
			<StackPanel Spacing="10">
				
				<Border Classes="card">
					<Button Command="{Binding GoToSecondViewCommand}">
						Navigate To Second View
					</Button>
				</Border>

				<Border Classes="card">
					<Svg Path="/Assets/Icons/back.svg" />
				</Border>


				<CheckBox x:Name="checkBox">
					Open Modal
				</CheckBox>
				
			</StackPanel>

			
			
		</Grid>

		<ctl:ModalControl 
			x:Name="modal"
			IsOpen="{Binding ElementName=checkBox,Path=IsChecked}">
			<Grid Background="Yellow">
				<Button Tapped="OnCloseModalClicked">
					Close Me
				</Button>
			</Grid>
		</ctl:ModalControl>

	</Grid>
</UserControl>
