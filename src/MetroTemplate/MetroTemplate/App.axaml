<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MetroTemplate"
			 RequestedThemeVariant="Light"
             x:Class="MetroTemplate.App">


	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source='/Styles/Colors.axaml'/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>

		<FontFamily x:Key="Tajawal">
			/Assets/Fonts/Tajawal-Regular.ttf#Tajawal
		</FontFamily>

		<FontFamily x:Key="Icon">
			/Assets/Fonts/fa-solid-900.ttf#Font Awesome 6 Free Solid
		</FontFamily>
		
	</Application.Resources>
	
    <Application.Styles>
        <!--<FluentTheme />-->
		<SimpleTheme />
		<StyleInclude Source="/Controls/HamburgerMenu.axaml"/>
		<StyleInclude Source="/Controls/ProgressRing.axaml"/>
		<StyleInclude Source="/Controls/RippleEffect.axaml"/>
		<StyleInclude Source="/Controls/LoadingButton.axaml"/>
		<StyleInclude Source="/Controls/MaterialRing.axaml"/>
		<StyleInclude Source="/Styles/Styles.axaml"/>
	</Application.Styles>
</Application>
